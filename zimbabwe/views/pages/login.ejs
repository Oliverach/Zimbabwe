<%- include('../partials/head'); %>
    <header>
        <%- include('../partials/header'); %>
    </header>
        <h1>Login</h1>
        <form method="POST" action="/user/doLogin" class="w-25 m-auto mt-5">
            <div class="form-group mt-2">
                <label for="email">Email address</label>
                <input name="email" type="email" class="form-control" id="InputEmail" placeholder="Enter email" required>
            </div>
            <div class="form-group mt-2">
                <label for="password">Password</label>
                <input name="password" type="password" class="form-control" id="InputPassword" placeholder="Enter password" required>
            </div>
            <button name="submit" type="submit" class="btn btn-primary mt-3">Login</button>
            <p>Don't have an account yet? <a href="/user/register">Register!</a></p>
        </form>
<%- include('../partials/footer'); %>